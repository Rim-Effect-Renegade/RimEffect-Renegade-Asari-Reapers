<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<HediffDef>
		<defName>RER_DirectControl</defName>
		<label>direct control</label>
		<description>This reaper unit has been put under the direct control of a reaper. It will not be significantly faster and can utilise cover.</description>
		<hediffClass>RimEffectReapers.HediffFromBuilding</hediffClass>
		<stages>
			<li>
				<statFactors>
					<MoveSpeed>1.25</MoveSpeed>
				</statFactors>
				<statOffsets>
					<ShootingAccuracyPawn>25</ShootingAccuracyPawn>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>RER_Indoctrinated</defName>
		<label>indoctrinated</label>
		<description>Being indoctrinated by a reaper. The increasing headache will eventually lead to mental breaks and insanity.</description>
		<hediffClass>RimEffectReapers.HediffFromBuilding</hediffClass>
		<initialSeverity>0</initialSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>tiny</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>small</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>medium</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>severe</label>
				<becomeVisible>true</becomeVisible>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>full</label>
				<becomeVisible>true</becomeVisible>
			</li>
		</stages>
	</HediffDef>

</Defs>